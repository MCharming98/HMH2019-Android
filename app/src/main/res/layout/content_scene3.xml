<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Scene3Activity"
    android:background="#fedf00">

    <ImageButton
        android:id="@+id/hit_choice_a"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/hit_choice_a"
        app:layout_constraintEnd_toStartOf="@+id/hit_choice_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/hit_choice_b"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/hit_choice_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hit_choice_a"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/hit_choice_c"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/hit_choice_c"
        app:layout_constraintEnd_toStartOf="@+id/hit_choice_d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hit_choice_a" />

    <ImageButton
        android:id="@+id/hit_choice_d"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/hit_choice_d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hit_choice_c"
        app:layout_constraintTop_toBottomOf="@+id/hit_choice_b" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="137dp"
        android:layout_height="47dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="38dp"
        android:text="a) It’s an accident, it’s fine"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/hit_choice_c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hit_choice_a" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="146dp"
        android:layout_height="46dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="31dp"
        android:text="b) I will find her and hit her, stupid girl"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/hit_choice_d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/hit_choice_b" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="147dp"
        android:layout_height="69dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="20dp"
        android:text="c) She does that intentionally to hurt me"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hit_choice_c" />

    <TextView
        android:layout_width="148dp"
        android:layout_height="55dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="d) I hate her but I just don’t want to deal with her "
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/hit_choice_d" />

</android.support.constraint.ConstraintLayout>